{
  "name": "network-canvas",
  "version": "4.0.0",
  "productName": "Network Canvas",
  "description": "A touch-optimised framework for capturing personal network data.",
  "private": true,
  "engines": {
    "node": "6.9.1",
    "npm": "3.10.7"
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "node scripts/start.js",
    "build-app": "node scripts/build.js && cp -r ./app/* ./www",
    "test": "node scripts/test.js --env=jsdom",
    "test-update-snapshots": "node scripts/test.js --env=jsdom --updateSnapshot",
    "build-docs": "jsdoc src -r -d docs-build -c ./jsdoc.conf.json --verbose",
    "electron": "electron ./app",
    "build-mac": "build -m",
    "generate-icons": "node generate-app-icons.js",
    "package-cordova": "cordova build ios && cordova build android"
  },
  "author": "Codaco",
  "build": {
    "appId": "Complex Data Collective",
    "directories": {
      "output": "release-builds"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
  },
  "repository": {
    "type": "git"
  },
  "devDependencies": {
    "autoprefixer": "6.7.2",
    "babel-core": "6.22.1",
    "babel-eslint": "7.1.1",
    "babel-jest": "18.0.0",
    "babel-loader": "6.2.10",
    "babel-preset-latest": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-runtime": "^6.20.0",
    "bluebird": "^3.5.0",
    "case-sensitive-paths-webpack-plugin": "1.1.4",
    "chalk": "1.1.3",
    "connect-history-api-fallback": "1.3.0",
    "cross-spawn": "4.0.2",
    "css-loader": "0.26.1",
    "custom-react-scripts": "0.0.21",
    "detect-port": "1.1.0",
    "dotenv": "2.0.0",
    "electron": "^1.4.15",
    "electron-builder": "^17.5.0",
    "electron-installer-dmg": "^0.2.0",
    "electron-packager": "^8.5.2",
    "electron-winstaller": "^2.5.2",
    "enzyme": "^2.8.2",
    "eslint": "^3.18.0",
    "eslint-config-react-app": "^0.6.2",
    "eslint-loader": "1.6.0",
    "eslint-plugin-flowtype": "2.21.0",
    "eslint-plugin-import": "2.0.1",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.4.1",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.10.0",
    "fs-extra": "0.30.0",
    "html-webpack-plugin": "2.24.0",
    "http-proxy-middleware": "0.17.3",
    "icon-gen": "^1.0.7",
    "jsdoc": "^3.4.3",
    "jsdoc-babel": "^0.3.0",
    "json-loader": "0.5.4",
    "object-assign": "4.1.1",
    "postcss-loader": "1.2.2",
    "promise": "7.1.1",
    "react-addons-test-utils": "^15.5.1",
    "react-dev-utils": "^0.5.2",
    "semantic-ui-react": "^0.67.2",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "webpack": "1.14.0",
    "webpack-dev-server": "1.16.2",
    "webpack-manifest-plugin": "1.1.0",
    "whatwg-fetch": "2.0.2"
  },
  "dependencies": {
    "@mars/heroku-js-runtime-env": "^3.0.0",
    "classnames": "^2.2.5",
    "gridle": "^2.0.48",
    "history": "^4.5.1",
    "lodash": "^4.17.4",
    "prop-types": "^15.5.8",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-draggable": "^2.2.3",
    "react-hammerjs": "^0.5.0",
    "react-icons": "^2.2.3",
    "react-redux": "^4.4.5",
    "react-router": "^3.0.2",
    "react-tap-event-plugin": "^2.0.1",
    "react-test-renderer": "^15.5.4",
    "react-transform-hmr": "^1.0.4",
    "redux": "^3.6.0",
    "redux-form": "^6.4.3",
    "redux-logger": "^2.7.4",
    "redux-persist": "^4.3.1",
    "redux-thunk": "^2.1.0",
    "reselect": "^3.0.0",
    "sass-svg": "^1.0.1"
  },
  "homepage": ".",
  "main": "src/electron-starter.js",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
