{
    "name": "network-canvas",
    "version": "4.0.0-alpha.6",
    "productName": "Network Canvas",
    "description": "Simplifying complex network data collection.",
    "author": "Complex Data Collective",
    "private": true,
    "engines": {
        "node": "8.11.1",
        "npm": "5.8.0"
    },
    "scripts": {
        "pack": "electron-builder --dir",
        "start": "node scripts/start.js",
        "start:android": "cross-env NC_TARGET_PLATFORM=android npm start",
        "start:electron": "cross-env NC_TARGET_PLATFORM=electron npm start",
        "start:ios": "cross-env NC_TARGET_PLATFORM=ios npm start",
        "build": "node scripts/build.js",
        "build:android": "cross-env NC_TARGET_PLATFORM=android npm run build && cordova prepare android",
        "build:electron": "cross-env NC_TARGET_PLATFORM=electron npm run build",
        "build:ios": "cross-env NC_TARGET_PLATFORM=ios npm run build && cordova prepare ios",
        "lint": "eslint src",
        "sass-lint": "sass-lint -vc .sass-lint.yml",
        "test": "node scripts/test.js --env=jsdom",
        "test-update-snapshots": "node scripts/test.js --env=jsdom --updateSnapshot",
        "build-docs": "cross-env NODE_ENV=production jsdoc src -r -d docs-build -c ./jsdoc.conf.json --verbose",
        "electron": "electron ./www",
        "electron:dev": "cross-env NODE_ENV=development NC_DEVSERVER_FILE=\".devserver\" electron public/",
        "ios:dev": "node scripts/check-dev-server.js && cross-env LIVE_RELOAD=1 cordova run ios",
        "android:dev": "node scripts/check-dev-server.js && cross-env LIVE_RELOAD=1 cordova run android",
        "generate-icons": "node scripts/generate-app-icons.js",
        "dist:android": "npm run build:android && cordova build android --release",
        "dist:ios": "npm run build:ios && cordova build ios --release",
        "dist:linux": "npm run build:electron && electron-builder -l --publish=always",
        "dist:mac": "npm run build:electron && electron-builder -m --publish=always",
        "dist:win": "npm run build:electron && electron-builder -w --publish=always",
        "bump": "sh scripts/bump",
        "generate-schema": "quicktype -o protocol.schema public/protocols/development.netcanvas/protocol.json",
        "validate-protocol": "node scripts/validate-protocol.js"
    },
    "repository": {
        "type": "git"
    },
    "devDependencies": {
        "@zippytech/sorty": "^2.0.0",
        "ajv": "^6.5.2",
        "animejs": "^2.2.0",
        "autoprefixer": "7.1.2",
        "babel-core": "6.25.0",
        "babel-eslint": "7.2.3",
        "babel-jest": "20.0.3",
        "babel-loader": "7.1.1",
        "babel-preset-react-app": "^3.0.2",
        "babel-preset-stage-3": "^6.24.1",
        "babel-runtime": "6.26.0",
        "bluebird": "^3.5.0",
        "buffer": "^5.0.8",
        "case-sensitive-paths-webpack-plugin": "2.1.1",
        "chalk": "1.1.3",
        "change-case": "^3.0.1",
        "classnames": "^2.2.5",
        "color": "^2.0.0",
        "connect-history-api-fallback": "1.3.0",
        "cross-env": "^5.1.4",
        "css-loader": "0.28.4",
        "detect-port": "1.1.0",
        "dotenv": "4.0.0",
        "electron": "^2.0.6",
        "electron-builder": "^20.26.1",
        "electron-installer-dmg": "^0.2.0",
        "electron-log": "^2.2.7",
        "electron-packager": "^8.5.2",
        "electron-to-chromium": "^1.3.21",
        "electron-updater": "^3.0.3",
        "electron-winstaller": "^2.5.2",
        "emoji-dictionary": "^1.0.9",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "es6-promise-plugin": "^4.1.0",
        "eslint": "^4.19.1",
        "eslint-config-airbnb": "^15.0.1",
        "eslint-config-react-app": "^2.0.0",
        "eslint-loader": "1.9.0",
        "eslint-plugin-flowtype": "2.35.0",
        "eslint-plugin-import": "2.7.0",
        "eslint-plugin-jsx-a11y": "5.1.1",
        "eslint-plugin-react": "^7.7.0",
        "eventemitter3": "^3.0.1",
        "extract-text-webpack-plugin": "3.0.0",
        "faker": "^4.1.0",
        "file-loader": "0.11.2",
        "fs-extra": "3.0.1",
        "fuse.js": "^3.2.0",
        "history": "^4.7.2",
        "html-webpack-plugin": "^2.30.1",
        "http-proxy-middleware": "0.17.3",
        "i": "^0.3.6",
        "icon-gen": "^1.2.1",
        "jest": "^22.4.3",
        "jsdoc": "^3.4.3",
        "jsdoc-babel": "^0.3.0",
        "json-loader": "0.5.4",
        "jszip": "^3.1.5",
        "libsodium-wrappers": "^0.7.3",
        "lodash": "^4.17.4",
        "mdns": "^2.3.4",
        "node-sass": "^4.5.3",
        "object-assign": "4.1.1",
        "postcss-flexbugs-fixes": "3.2.0",
        "postcss-loader": "2.0.6",
        "promise": "7.1.1",
        "prop-types": "^15.6.1",
        "quicktype": "^15.0.100",
        "react": "^16.3.2",
        "react-dev-utils": "^5.0.1",
        "react-dom": "^16.3.2",
        "react-draggable": "^2.2.3",
        "react-hammerjs": "^1.0.1",
        "react-markdown": "^3.3.0",
        "react-redux": "^5.0.7",
        "react-router-dom": "^4.1.1",
        "react-router-redux": "^5.0.0-alpha.9",
        "react-scripts": "^1.0.13",
        "react-test-renderer": "^16.2.0",
        "react-transform-hmr": "^1.0.4",
        "react-transition-group": "^2.2.1",
        "recompose": "^0.26.0",
        "redux": "^3.6.0",
        "redux-form": "^7.4.2",
        "redux-logger": "^2.7.4",
        "redux-mock-store": "^1.3.0",
        "redux-observable": "^0.14.1",
        "redux-persist": "^4.9.1",
        "redux-thunk": "^2.1.0",
        "request": "^2.83.0",
        "request-promise-native": "^1.0.5",
        "reselect": "^3.0.0",
        "rimraf": "^2.6.2",
        "rxjs": "^5.4.0",
        "sass-lint": "^1.12.1",
        "sass-loader": "^6.0.6",
        "sass-svg": "^1.0.1",
        "sockjs-client": "^1.1.4",
        "style-loader": "0.18.2",
        "svg2png": "^4.1.1",
        "upgrade": "^1.1.0",
        "url-loader": "0.5.9",
        "webpack": "3.5.1",
        "webpack-dev-server": "2.7.1",
        "webpack-manifest-plugin": "^1.3.1",
        "whatwg-fetch": "2.0.3",
        "xss": "^0.3.4"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "cordova-android": "^7.1.0",
        "cordova-ios": "^4.5.4",
        "cordova-plugin-app-version": "^0.1.9",
        "cordova-plugin-device": "^2.0.2",
        "cordova-plugin-file": "^5.0.0",
        "cordova-plugin-file-transfer": "^1.7.1",
        "cordova-plugin-whitelist": "^1.3.3",
        "cordova-plugin-wkwebview-engine": "^1.1.4",
        "cordova-plugin-x-socialsharing": "^5.2.1",
        "cordova-plugin-zeroconf": "^1.3.3",
        "object-hash": "^1.3.0",
        "react-id-swiper": "^1.6.4",
        "thread-loader": "^1.2.0"
    },
    "homepage": ".",
    "main": "www/electron-starter.js",
    "build": {
        "extends": null,
        "appId": "Network-Canvas",
        "directories": {
            "buildResources": "build-resources",
            "output": "release-builds"
        },
        "mac": {
            "category": "public.app-category.education"
        },
        "win": {
            "target": "nsis",
            "certificateSubjectName": "Complex Data Collective"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "codaco",
                "repo": "network-canvas"
            }
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{js,jsx}"
        ],
        "setupFiles": [
            "<rootDir>/config/polyfills.js",
            "<rootDir>/config/jest/polyfills.js",
            "<rootDir>/config/jest/enzyme.js",
            "<rootDir>/config/jest/automock.js"
        ],
        "testPathIgnorePatterns": [
            "<rootDir>[/\\\\](www|docs|node_modules|scripts)[/\\\\]"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
        ],
        "moduleNameMapper": {
            "^react-native$": "react-native-web"
        }
    },
    "cordova": {
        "platforms": [
            "android",
            "ios"
        ],
        "plugins": {
            "cordova-plugin-app-version": {},
            "cordova-plugin-x-socialsharing": {},
            "cordova-plugin-wkwebview-engine": {},
            "cordova-plugin-file": {},
            "cordova-plugin-file-transfer": {},
            "cordova-plugin-whitelist": {},
            "cordova-plugin-zeroconf": {},
            "cordova-plugin-device": {}
        }
    }
}
